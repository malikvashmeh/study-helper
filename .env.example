# Study Mate Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# Optional: OpenAI API Key (if you want to use OpenAI instead of Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma
VECTOR_DB_PATH=./data/vector_db

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM Configuration
DEFAULT_LLM=gemini  # Options: gemini, openai
DEFAULT_MODEL=gemini-1.5-flash  # For Gemini: gemini-1.5-flash, gemini-1.5-pro
EMBEDDING_MODEL=models/embedding-001

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501
